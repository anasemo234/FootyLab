<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        .container {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            gap: 2em;
        }
        img {
            width: 255px;
            border: solid black 2px;
        }
        nav {
            text-align: center;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <nav>
        <a href="/writes/new">Create a New Entry</a>
        <a href="/reviews">Reviews</a>
    </nav>
    <h1>My Entrys</h1>
    <div class="container">
    
        <% writes.forEach(write => { %>
            <h4><a href="/writes/<%=write._id; %>"><img src="<%=write.img %>"> <%=write.name; %></a></h4>
                <h3>$<%=write.price; %></h3>
            
            <form action="/writes/<%= write.id %>?_method=DELETE" method="POST">
                <input type="submit" value="DELETE">
            </form>
            <a href="/writes/<%=write._id %>/edit">Edit</a>
            
            
       <% }) %>
    </div>
</body>
</html>